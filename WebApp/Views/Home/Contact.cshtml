@{
    ViewData["Title"] = "Contact";
}


<div class="col-lg-12 col-md-12 contact">

    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">

        <h3>Do you have any questions?</h3>
        <h4>Then please send me an email</h4>

        <div class="form-group-contact">
            <input class="form-control" placeholder="Your email" />
        </div>

        <div class="form-group-contact">
            <input class="form-control" placeholder="Subject" />
        </div>


        <textarea class="email-text" rows="5" placeholder="Here you can write your question..."></textarea>


        <div class="form-group-contact">
            <input type="submit" value="Send email" id="send" class="btn btn-info send-btn" />
        </div>

    </div>

</div>

<div id="myModal" class="modal">

    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Yor have now sent an e-mail to the car dealership, with your question. </p>
        <br />
        <p>Have a good day!</p>
        <br />
        <p>OBS! (This e-mail function  isn't currently working)</p>

    </div>

</div>
