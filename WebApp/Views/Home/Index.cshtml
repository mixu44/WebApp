@{
    ViewData["Title"] = "Car dealership";
    var time = ViewData["Message"];

}


<div class="col-lg-12 col-md-12">
    <div class="col-lg-12 col-md-12 headline">
        <h1>Welcome to Rasmus' Car Dealership</h1>
        <h1>@time</h1>
    </div>

    <div class="col-lg-4 col-md-4 homepage">
        <img src="~/images/car.png" />
        <div class="col-md-12 homepagebuttons">
            <button type="button" class="btn btn-info btnhome" onclick="location.href='@Url.Action("Index", "Cars")'">See all available cars</button>
        </div>
    </div>

    <div class="col-lg-4 col-md-4 homepage">
        <img src="~/images/newcar.png" /> <br />
        <div class="col-md-12 homepagebuttons">
            <button type="button" class="btn btn-info btnhome" onclick="location.href='@Url.Action("Create", "Cars")'">Create new car</button>
        </div>
    </div>

    <div class="col-lg-4 col-md-4 homepage">
        <img src="~/images/contact.png" /> <br />
        <div class="col-md-12 homepagebuttons">
            <button type="button" class="btn btn-info btnhome" onclick="location.href='@Url.Action("Contact", "Home")'">Contact for more information</button>
        </div>
    </div>

</div>

<div class="col-lg-12 col-md-12 webapp">
    <h4>This is a simple ASP.NET Application - made by Rasmu Nøhr 2018</h4>

</div>
