@{
    ViewData["Title"] = "Car dealership";
}


<div class="col-lg-12 col-md-12">

    <div class="col-lg-4 col-md-4 homepage">
        <img src="~/images/car.png" />
        <div class="col-md-12 homepagebuttons">
            <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Cars")'">See all available cars</button>
